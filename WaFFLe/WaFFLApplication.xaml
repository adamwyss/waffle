<Application x:Class="WaFFL.Evaluation.WaFFLApplication"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WaFFL.Evaluation"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>

        <Style x:Key="RightAlignTextStyle" TargetType="{x:Type TextBlock}">
            <Setter Property="TextAlignment" Value="Right" />
        </Style>
        
        <Style x:Key="WeekByWeekScoreStyle" TargetType="{x:Type TextBlock}">
            <Setter Property="TextAlignment" Value="Right" />
            <Setter Property="Foreground" Value="DarkGray" />
        </Style>

    </Application.Resources>
</Application>
